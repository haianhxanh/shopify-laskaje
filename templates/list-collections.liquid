{% for collection in collections %} {% unless collection.handle == 'frontpage'
%} {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}

<h2>Collection: {{ collection_title }}</h2>

{% for product in collection.products limit:5 %} {% assign grid_item_width =
'large--one-fifth medium--one-half' %}

<div>
  <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
  {{ product.price | money_without_trailing_zeros }}
  {% unless product.available %}<br /><strong>sold out</strong>{% endunless %}
  <div style="width: 300px">
    <a href="{{ product.url | within: collection }}">
      <img
        src="{{ product.featured_image.src | img_url: 'large' }}"
        alt="{{ product.featured_image.alt | escape }}"
      />
    </a>
  </div>
</div>

{% endfor %} {% endunless %} {% endfor %}
